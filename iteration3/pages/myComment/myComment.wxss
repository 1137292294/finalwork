page {
  background-color:#f0fff0;
}

/* 列表样式 */
.item_root {
  padding: 15rpx;
  background: white;
  margin: 10rpx 15rpx;
  border-radius: 20rpx;
  border: 1rpx solid #2c7aee;
}

.item_good {
  display: flex;
  margin: 15rpx;
  border: 1px solid #2c7aee;
}

.item_img {
  min-width: 100rpx;
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}

.item_title {
  font-size: 32rpx;
  font-family: 'Times New Roman', Times, serif;
}

.time {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.content {
  margin: 20rpx 5rpx;
  font-size: 32rpx;
  font-family: 'Times New Roman', Times, serif;
}

/* 评分星星 */

.star_root {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.star_img {
  width: 40rpx;
  height: 40rpx;
}