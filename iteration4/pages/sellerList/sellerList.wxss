page {
    background:#F0FFF0;
    height: 100%;
  }

/* 卖家的其他商品 */
.seller_list {
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
}

.seller_item {
    min-width: 330rpx;
    width: 330rpx;
    display: flex;
    margin-left: 30rpx;
    margin-top: 30rpx;
    padding-bottom: 15rpx;
    flex-direction: column;
    align-items: center;
    background-color: #ffffff;
    border: 1px solid #2c7aee;
    border-radius: 10rpx;
}

.seller_item_img {
    width: 100%;
    height: 330rpx;
    margin-bottom: 10rpx;
}


.seller_item_title {
    width: 100%;
    font-size: 30rpx;
    font-family: 'Times New Roman', Times, serif;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: box;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.seller_item_price {
    font-weight: bold;
    font-family: 'Times New Roman', Times, serif;
    font-size: 30rpx;
    color: purple;
    margin-left: 15rpx;
}

.seller_item_num {
    font-size: 30rpx;
    font-family: 'Times New Roman', Times, serif;
    color: black;
    margin-left: 40rpx;
}