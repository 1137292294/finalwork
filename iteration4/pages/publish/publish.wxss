.title {
  font-weight: bold;
  font-size: 36rpx;
  color: #2E8B57;
  margin: 20rpx 0 10rpx 20rpx;
}


/* 所属学校 */
.picker {
  width: 100%;
  font-size: 33rpx;
  color: gray;
  margin: 20rpx 50rpx;
}

.input {
  border: solid 1px gainsboro;
  width: 690rpx;
  margin: 5rpx 30rpx;
}

.desc {
  margin-top: 15rpx;
  width: 690rpx;
  border: solid 1px gainsboro;
  margin: 28rpx;
  height: 150rpx;
}

.imageRootAll {
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}


.imgItem {
  margin: 6rpx;
  position: relative;
  width: 176rpx;
  height: 176rpx;
  background: gainsboro;
}

.img {
  width: 100%;
  height: 100%;
}

.closeImg {
  position: absolute;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
}

.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}